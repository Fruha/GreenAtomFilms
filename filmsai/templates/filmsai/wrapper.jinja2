{% load static %}
<!DOCTYPE html>
<html lang="ru">
<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="{% static 'filmsai/css/materialize.min.css' %}"  media="screen,projection"/>
  <link type="text/css" rel="stylesheet" href="{% static 'filmsai/css/main.css' %}"  media="screen,projection"/>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}{% endblock title %}</title>
  {% block head %}{% endblock head %}
</head>
<body>
  {# Header #}
  <nav>
    <div class="nav-wrapper container">
      <a href="/" class="brand-logo">FilmsAI</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="{% url 'films_list' %}">Фильмы</a></li>
        <li><a href="{% url 'info' %}">Информация</a></li>
      </ul>
    </div>
  </nav>

  {# CONTENT #}
  <main>{% block body %}{% endblock body %}</main>
  
  {# FOOTER #}
  <footer class="page-footer">
    <div class="row">
      <div class="col l4 offset-m2 s12">
        <h5 class="white-text">Навигация</h5>
        <ul>
          <li><a class="grey-text text-lighten-3" href="{% url 'films_list' %}">Фильмы</a></li>
          <li><a class="grey-text text-lighten-3" href="{% url 'info' %}">Информация</a></li>
        </ul>
      </div>
    </div>
    <div class="footer-copyright offset-m1">
      © 2023 Copyright Text
    </div>
  </footer>

  <!--JavaScript at end of body for optimized loading-->
  <script type="text/javascript" src="{% static 'filmsai/js/materialize.min.js' %}"></script>
</body>
</html>